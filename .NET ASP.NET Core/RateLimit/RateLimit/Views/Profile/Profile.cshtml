@model ProfileListViewModel

@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Index" method="get">
    <div class="form-action no-color">
        <p>
            Find: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-outline-dark" />
            <a asp-action="Index" class="btn btn-outline-dark">Clear</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-sortOrder="@Html.NameFor(m => m.Profiles.First().FirstName)"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(m => m.Profiles.First().FirstName)
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@Html.NameFor(m => m.Profiles.First().LastName)"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(m => m.Profiles.First().LastName)
                </a>
            </th>
            <th>
                <a asp-route-sortOrder="@Html.NameFor(m => m.Profiles.First().Birthday)"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    @Html.DisplayNameFor(m => m.Profiles.First().Birthday)
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profile in Model.Profiles)
            {
                <tr>
                    <td>
                        @profile.FirstName
                    </td>
                    <td>
                        @profile.LastName
                    </td>
                    <td>
                        @profile.Birthday.ToString("dd.MM.yyyy")
                    </td>
                </tr>
            }
    </tbody>
</table>

@{ 
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-pageNumber="@(Model.CurrentPageNumber - 1)"
   asp-route-searchString="@ViewData["CurrentFilter"]"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   class="btn btn-outline-dark @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.CurrentPageNumber + 1)"
   asp-route-searchString="@ViewData["CurrentFilter"]"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   class="btn btn-outline-dark @nextDisabled">
    Next
</a>